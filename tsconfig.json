{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es6"
    ],
    "typeRoots": [
      ".node_modules/@types"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts",
    "dist"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
